    <com.lpan.study.view.smilefaceview.SimleLeftEyeView
        android:id="@+id/smileView3"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <com.lpan.study.view.smilefaceview.SimleRightEyeView
        android:id="@+id/smileView4"
