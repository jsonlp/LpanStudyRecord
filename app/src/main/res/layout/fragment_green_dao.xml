<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@id/green_dao_insert_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_gray"
            android:gravity="center"
            android:text="insert"/>

        <TextView
            android:id="@id/green_dao_delete_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_gray"
            android:gravity="center"
            android:text="delete"/>

        <TextView
            android:id="@id/green_dao_update_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_gray"
            android:gravity="center"
            android:text="update"/>

        <TextView
            android:id="@id/green_dao_query_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_gray"
            android:gravity="center"
            android:text="query"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@id/green_dao_insert_all_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_gray"
            android:gravity="center"
            android:text="insert all"/>

        <TextView
            android:id="@id/green_dao_delete_all_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_gray"
            android:gravity="center"
            android:text="delete all"/>

        <TextView
            android:id="@id/green_dao_query_all_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_gray"
            android:gravity="center"
            android:text="query all"/>
    </LinearLayout>


    <TextView
        android:id="@id/desc"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>