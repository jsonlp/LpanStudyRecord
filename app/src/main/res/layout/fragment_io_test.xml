    <TextView
        android:id="@id/text1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="1 String to InputStream"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@id/text2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="2 InputStream to String"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/black"/>

</LinearLayout>