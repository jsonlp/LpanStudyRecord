<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.lpan.study.view.actionbar.MyActionbarView
            android:id="@id/my_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="1 Paint"/>

        <ImageView
            android:id="@id/image1"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:scaleType="matrix"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="2 Canvas draw bitmap"/>

        <ImageView
            android:id="@id/image2"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:scaleType="matrix"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="3 Canvas draw point"/>

        <ImageView
            android:id="@id/image3"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:scaleType="matrix"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="4 Canvas draw line"/>

        <ImageView
            android:id="@id/image4"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:scaleType="matrix"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="5 Canvas draw roundRect/rect"/>

        <ImageView
            android:id="@id/image5"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:scaleType="matrix"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="6 Canvas draw oval/circle"/>

        <ImageView
            android:id="@id/image6"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:scaleType="matrix"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="7 Canvas draw arc"/>

        <ImageView
            android:id="@id/image7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:scaleType="matrix"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="8 Canvas draw path"/>

        <ImageView
            android:id="@id/image8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="matrix"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="9 Canvas draw path:bezier"/>

        <ImageView
            android:id="@id/image9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="matrix"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="10 test"/>

        <ImageView
            android:id="@id/image10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="matrix"/>

    </LinearLayout>
</ScrollView>